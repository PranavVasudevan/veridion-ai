{
    "name": "veridion-backend",
    "version": "1.0.0",
    "description": "Veridion AI robo-advisor backend",
    "main": "dist/server.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "db:migrate": "npx prisma migrate dev",
        "db:seed": "npx prisma db seed",
        "db:reset": "npx prisma migrate reset --force",
        "db:studio": "npx prisma studio",
        "db:generate": "npx prisma generate"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "dependencies": {
        "@fastify/cors": "^10.0.2",
        "@prisma/client": "^6.4.1",
        "bcryptjs": "^2.4.3",
        "dotenv": "^16.4.7",
        "fastify": "^5.2.1",
        "jsonwebtoken": "^9.0.2",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.13.4",
        "prisma": "^6.4.1",
        "tsx": "^4.19.3",
        "typescript": "^5.7.3"
    }
}